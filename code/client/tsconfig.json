{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["webpack.config.js","src","index.d.ts"],
  "exclude": ["node_modules"]
}